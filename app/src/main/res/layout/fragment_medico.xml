<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_medico"
        app:tint="@android:color/darker_gray"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/medico_data_hora"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Dr. Exemplo"
        android:gravity="center"
        android:background="@drawable/bg_rounded_green"
        android:textColor="@drawable/bg_btn_text_green_white"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="01/08/2022 - 15:30"
        android:gravity="center"
        android:background="@drawable/bg_rounded_green"
        android:textColor="@drawable/bg_btn_text_green_white"
        android:padding="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sh_fg_btn_avancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_rounded_green_inverse"
        android:text="@string/confirmar_agendamento"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold" />

</LinearLayout>